@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.License>

<h2>Licenses</h2>

@if (@Model.Count == 0)
{
  <p>There are no licenses in the system.</p>
}

<ul>
  @foreach (License license in Model)
  {
    <li>@Html.ActionLink($"{license.Type}", "Details", new { id = license.LicenseId})</li>
  }
</ul>

<p>@Html.ActionLink("Add license", "Create")</p>